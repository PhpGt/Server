{
	"name": "phpgt/server",
	"description": "Development HTTP server.",

	"minimum-stability": "dev",

	"bin": [
		"bin/serve"
	],

	"require": {
		"phpgt/cli": "1.*"
	},
	"require-dev": {
		"phpunit/phpunit": "8.*"
	},

	"autoload": {
		"psr-4": {
			"Gt\\Server\\": "./src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Gt\\Test\\Server\\": "./test/unit/"
		}
	}
}