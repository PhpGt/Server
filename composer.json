{
	"name": "phpgt/server",
	"description": "Development HTTP server.",

	"bin": [
		"bin/serve"
	],

	"require": {
		"php": ">=7.4",
		"phpgt/cli": "*"
	},
	"require-dev": {
		"phpunit/phpunit": "9.*",
		"phpstan/phpstan": ">=0.12.64"
	},

	"autoload": {
		"psr-4": {
			"Gt\\Server\\": "./src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Gt\\Test\\Server\\": "./test/unit/"
		}
	},
	
	"funding": [
		{
			"type": "github",
			"url": "https://github.com/sponsors/PhpGt"
		}
	]
}
