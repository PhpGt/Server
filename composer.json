{
	"name": "phpgt/server",
	"description": "Development HTTP server.",

	"minimum-stability": "dev",

	"bin": [
		"bin/serve"
	],

	"require": {
		"phpgt/cli": "^1.0",
		"phpgt/webengine": "dev-master",
		"react/http": "^0.8.4",
		"react/stream": "^1.1",
		"react/event-loop": "^1.0"
	},
	"require-dev": {
		"phpunit/phpunit": "^8.0"
	},

	"autoload": {
		"psr-4": {
			"Gt\\Server\\": "./src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Gt\\Test\\Server\\": "./test/unit/"
		}
	}
}